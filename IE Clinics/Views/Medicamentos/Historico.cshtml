@model IEnumerable<IE_Clinics.Models.Dominio.Venda>
@{
    ViewBag.Title = "Histórico de vendas";
}

<div class="row">
    <div class="col-md-12">
        <div class="tabbable-line">
            <div class="tab-content">
                <div class="tab-pane active fontawesome-demo" id="tab1">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-topline-red">
                                <div class="card-head">
                                    <header></header>
                                    <div class="tools">
                                        <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                                        @*<a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                                            <a class="t-close btn-color fa fa-times" href="javascript:;"></a>*@
                                    </div>
                                </div>
                                <div class="card-body ">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-6">
                                            <div class="btn-group">
                                                <a href="@Url.Action("Index", "Medicamentos", new { area = ""})" id="addRow" class="btn btn-info">
                                                    Lista de fármacos <i class="fa fa-eye"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6">
                                            <div class="btn-group pull-right">
                                                <a class="btn deepPink-bgcolor  btn-outline dropdown-toggle" data-toggle="dropdown">
                                                    Tools
                                                    <i class="fa fa-angle-down"></i>
                                                </a>
                                                <ul class="dropdown-menu pull-right">
                                                    <li>
                                                        <a href="javascript:;">
                                                            <i class="fa fa-print"></i> Print
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="javascript:;">
                                                            <i class="fa fa-file-pdf-o"></i> Save as PDF
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="javascript:;">
                                                            <i class="fa fa-file-excel-o"></i> Export to Excel
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="table-scrollable">
                                        <table class="table table-hover table-checkable order-column full-width" id="example4">
                                            <thead>
                                                <tr class="center">
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.NomeCliente)
                                                    </th>
                                                    <th>
                                                        Fármaco
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Quantidade)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.ValorTotal)
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var venda in Model)
                                                {
                                                    <tr class="odd gradeX center">
                                                        <td>@venda.NomeCliente</td>
                                                        <td>@venda.Farmaco</td>
                                                        <td class="center">@venda.Quantidade</td>
                                                        <td>@venda.ValorTotal kz</td>
                                                        
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

