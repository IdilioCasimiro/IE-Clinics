@model IE_Clinics.Models.Dominio.Paciente
@{
    ViewBag.Title = "Adicionar Paciente";
}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="card card-box">
            <div class="card-head">
                <header>Formulário</header>
                <button id="panel-button"
                        class="mdl-button mdl-js-button mdl-button--icon pull-right"
                        data-upgraded=",MaterialButton">
                    <i class="material-icons">more_vert</i>
                </button>
                <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                    data-mdl-for="panel-button">
                    <li class="mdl-menu__item"><i class="material-icons">assistant_photo</i>Action</li>
                    <li class="mdl-menu__item"><i class="material-icons">print</i>Another action</li>
                    <li class="mdl-menu__item"><i class="material-icons">favorite</i>Something else here</li>
                </ul>
            </div>
            <div class="card-body" id="bar-parent">
                @using (Html.BeginForm("Adicionar-Paciente", "Paciente", FormMethod.Post, new { @id = "form_sample_1", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-body">
                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                Primeiro nome
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.Nome, new { @placeholder = "Primeiro nome", @class = "form-control input-height" })
                                @Html.ValidationMessageFor(model => model.Nome)
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                Data de nascimento
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-5">
                                <div class="input-group date form_date " data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                    @Html.TextBoxFor(model => model.DataNascimento, new { @placeholder = "DD/MM/AAAA", @class = "form-control input-height" })
                                    <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                    @Html.ValidationMessageFor(model => model.DataNascimento)
                                </div>
                                <input type="hidden" id="dtp_input2" value="" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                Sexo
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-5">
                                @Html.EnumDropDownListFor(model => model.Sexo, "Sexo", new { @class = "form-control input-height" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                País
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.Pais, new { @placeholder = "País", @class = "form-control input-height" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                Província
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.Provincia, new { @placeholder = "Província", @class = "form-control input-height" })
                                @Html.ValidationMessageFor(model => Model.Provincia)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                Endereço
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.Endereco, new { @placeholder = "Endereço", @class = "form-control input-height" })
                                @Html.ValidationMessageFor(model => Model.Endereco)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                Telefone
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.Telefone, new { @placeholder = "Telefone", @class = "form-control input-height" })
                                @Html.ValidationMessageFor(model => Model.Telefone)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                Telefone alternativo
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.TelefoneAlternativo, new { @placeholder = "Telefone alternativo", @class = "form-control input-height" })
                                @Html.ValidationMessageFor(model => Model.TelefoneAlternativo)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                Email
                                <span class="required"> * </span>
                            </label>
                            <div class="col-md-5">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                    @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @class = "form-control input-height" })
                                    @Html.ValidationMessageFor(model => Model.Email)
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                Grupo sanguíneo
                            </label>
                            <div class="col-md-5">
                                <select class="form-control input-height" name="GrupoSanguineo">
                                    <option value="">Grupo sanguíneo ...</option>
                                    <option value="Category 1">A+</option>
                                    <option value="Category 2">A-</option>
                                    <option value="Category 3">B+</option>
                                    <option value="Category 4">B-</option>
                                    <option value="Category 5">AB+</option>
                                    <option value="Category 6">AB-</option>
                                    <option value="Category 7">O+</option>
                                    <option value="Category 8">O-</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-actions">
                            <div class="row">
                                <div class="offset-md-3 col-md-9">
                                    <button type="submit" class="btn btn-info m-r-20">Salvar</button>
                                    <a href="@Url.Action("Index", "Paciente", new { area = "" })" class="btn btn-default">Cancelar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

