@model IE_Clinics.Models.Dominio.AnaliseMedica

@{
    ViewBag.Title = "Efectuar análise médica";
}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="card card-box">
            <div class="card-head">
                <header>Paciente: @ViewBag.NomePaciente</header>
                <button id="panel-button"
                        class="mdl-button mdl-js-button mdl-button--icon pull-right"
                        data-upgraded=",MaterialButton">
                    <i class="material-icons">more_vert</i>
                </button>
                <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                    data-mdl-for="panel-button">
                    <li class="mdl-menu__item"><i class="material-icons">assistant_photo</i>Action</li>
                    <li class="mdl-menu__item"><i class="material-icons">print</i>Another action</li>
                    <li class="mdl-menu__item"><i class="material-icons">favorite</i>Something else here</li>
                </ul>
            </div>
            <div class="card-body " id="bar-parent">
                @using (Html.BeginForm("Create", "AnalisesMedicas", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <input type="hidden" name="AnaliseMedicaID" value="@Model.AnaliseMedicaID" />
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label for="frequenciaCardiaca">Indicação clínica</label>
                                @Html.EditorFor(model => model.IndicacaoClinica, new { htmlAttributes = new { @class = "form-control", @min = 0 } })
                                @Html.ValidationMessageFor(model => model.IndicacaoClinica, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="peso">Exames a realizar</label>
                                @Html.TextAreaFor(model => model.Exames, new { @class = "form-control", @rows = 5 })
                                @Html.ValidationMessageFor(model => model.Exames, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">

                            <div style="display: block; padding-right: 0">
                                <button type="submit" class="btn btn-success">Salvar</button>
                                @*<a href="@Url.Action("Index", "Marcacoes")" class="btn btn-default">Cancelar</a>*@
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

